<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>
            <div class="container">
                <br>
                <h1>Ask me</h1>
                <h5>Qual é sua dúvida?</h5>
                <hr>
                <a href="/perguntar" class="btn btn-primary">Criar uma pergunta</a>
                <br>
                <% perguntas.forEach(pergunta=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-success">Visualizar e
                                    Responder</button></a>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </body>
    <%- include ('partials/footer.ejs') %>